@model OnlineCoaching.ViewModels.CoachingLevel.CoachingLevelViewModel

@{
    ViewBag.Title = "Level Page";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Delete", "Levels", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <h4>Delete level</h4>
    <hr />
    <br />
    <h4 class="panel panel-body panel-danger">Are you sure you want to delete this level ?</h4>
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(l => l.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(l => l.Name, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(l => l.Rank, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(l => l.Rank, new { @class = "form-control", @type = "number", @readonly = "readonly" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(l => l.ImageURL, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <img src="@Model.ImageURL" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-danger" value="Delete level" />
            <a href="~/Levels/Index" class="btn btn-primary">Cancel</a>
        </div>
    </div>
}
