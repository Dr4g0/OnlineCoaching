@model OnlineCoaching.ViewModels.Offer.OfferViewModel
@{
    ViewBag.Title = "Offer Page";
}

<h2>@ViewBag.Title</h2>

    @using (Html.BeginForm("Create", "Offers", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <h4>Create a new offer</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(o => o.Title, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(o => o.Title, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(o => o.Description, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextAreaFor(o => o.Description, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Category", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @(Html.Kendo()
                .DropDownListFor(model => model.CoachingCategoryID)
                .DataTextField("Name")
                .DataValueField("ID")
                .BindTo(Model.Categories)
                .HtmlAttributes(new { style = "width:280px" }))
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(o => o.ImageUpload, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(o => o.ImageUpload, new { @class = "col-md-10 form-control", @type = "file" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-info" value="Create offer" />
                <a href="~/Offers/Index" class="btn btn-primary">Cancel</a>
            </div>
        </div>
    }

    @section Scripts{
        @Scripts.Render("~/bundles/jqueryval");
    }

